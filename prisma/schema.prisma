generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  passwordHash  String
  createdAt     DateTime         @default(now())

  bankAccounts  BankAccount[]
  subscriptions Subscription[]
  transactions  Transaction[]
}

model BankAccount {
  id          String   @id @default(uuid())
  userId      String
  provider    String
  accessToken String
  bankName    String?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Transaction {
  id            String   @id @default(uuid())
  userId        String
  amount        Float
  description   String
  date          DateTime
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Subscription {
  id              String   @id @default(uuid())
  userId          String
  merchant        String
  amount          Float
  cycle           String
  nextPaymentDate DateTime
  status          String   @default("active")
  createdAt       DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
